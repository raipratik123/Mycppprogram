#include<iostream>
using namespace std;
int rev(int n){
      int  rev=0;
     while(n>0){
       int k=n%10;
       rev=rev*10+k;
        n=n/10;
    }
    return rev;
}
int main(){
    int n;
    cin>>n;
   int bn=0;
    while(n>0){
        int m=n%10;
         bn=bn*10+m;

        n=n/2;
    }
    cout<<rev(bn);
return 0;

}